<h1>Detalhes do lote</h1>

<div>
  <p><strong><%= Batch.human_attribute_name(:start_date)%>:</strong>
    <%=@batch.start_date%>
  </p>

  <p><strong><%= Batch.human_attribute_name(:final_date)%>:</strong>
    <%=@batch.final_date%>
  </p>

  <p><strong><%= Batch.human_attribute_name(:minimum_value)%>:</strong>
    <%=@batch.minimum_value%>
  </p>

  <p><strong><%= Batch.human_attribute_name(:minimum_difference)%>:</strong>
    <%=@batch.minimum_difference%>
  </p>

</div>

<div>
  <h2>Itens do lote</h2>
  <% @batch.items.each do |i|%>
  <p><strong><%= Item.human_attribute_name(:name)%></strong>:
    <%= i.name %>
  </p>

  <p><strong><%= Item.human_attribute_name(:description)%>:</strong>
    <%= i.description %>
  </p>

  <p><strong><%= Item.human_attribute_name(:dimensions)%>:</strong>
    <%=i.full_dimensions%>
  </p>
  <hr>
  <% end %>

</div>

<% if !@batch.created_by_id.nil? %>
  <div>
    <p><strong><%= Batch.human_attribute_name(:batch_created)%>:</strong>
      <%= Admin.find(@batch.created_by_id).email%>
    </p>

    <% if @batch.approved %>
      <p><strong><%= Batch.human_attribute_name(:batch_approved)%>
        :</strong><%= Admin.find(@batch.approved_by_id).email%>
      </p>
    <% else %>
      <p><strong>Lote aguardando aprovaçao</p>
    <% end %>
  </div>

<% end %>

<% if @batch.in_progress? && user_signed_in? %>
  <% if @batch.bids.count > 0 %>
    <h4>O maior lance no momento é de R$<%= @batch.bids.maximum(:value) %></h4>
  <% end %>
  <%= form_with(url: place_a_bid_path) do |form| %>
    <%= form.label :value, 'Valor' %>
    <%= form.number_field :value %>
    <%= form.hidden_field :batch_id, value: @batch.id %>
    <%= form.submit 'Enviar lance' %>
  <% end %>
<% end %>
